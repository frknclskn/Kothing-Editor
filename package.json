{
  "name": "kothing-editor",
  "version": "0.1.0",
  "description": "A powerful WYSIWYG rich text web editor by pure javascript",
  "repository": {
    "type": "git",
    "url": "git://github.com/kothing/kothing-editor.git"
  },
  "main": "src/editor.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --inline --progress --config ./scripts/webpack.dev.js",
    "build": "cross-env NODE_ENV=production node ./scripts/build.js",
    "babel": "babel src --out-dir dist/lib",
    "lint": "eslint src --fix --ext .js,.ts",
    "lint:create": "eslint --init"
  },
  "author": "Kothing",
  "keywords": [
    "wysiwyg",
    "editor",
    "wysiwyg editor",
    "rich text",
    "rich editor",
    "rich text editor",
    "web",
    "html",
    "contenteditable",
    "KothingEditor",
    "javascript"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-loader": "^8.1.0",
    "chalk": "^2.4.2",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^5.2.0",
    "css-minimizer-webpack-plugin": "3.0.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^4.3.0",
    "less": "^4.1.1",
    "less-loader": "^8.1.1",
    "lint-staged": "^10.3.0",
    "mini-css-extract-plugin": "^1.6.0",
    "ora": "^4.0.2",
    "prettier": "^2.1.1",
    "style-loader": "^1.0.0",
    "ts-loader": "^9.2.3",
    "typescript": "~3.9.7",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.2.0"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "codemirror": "^5.57.0",
    "katex": "^0.12.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "eslintIntegration": false,
    "endOfLine": "auto"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
